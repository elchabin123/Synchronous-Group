@model DemoWeb.Models.ErrorViewModel

@{
    ViewData["Title"] = "Intro";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang giới thiệu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }



        header {
            background: #333;
            color: #fff;
            padding-top: 10px;
            min-height: 50px;
            border-bottom: #fff 3px solid;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background: #fff;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #333;
            color: #fff;
        }

        tr:nth-child(even) {
            background: #f2f2f2;
        }

        .button {
            background: #333;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .button:hover {
                background: #555;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        ..modal-content {
            width: 1000px; /* Adjust width as needed */
            overflow-y: auto; /* Enable vertical scrolling */
            max-height: calc(100vh - 100px);
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom:   15px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="file"],
        input[type="date"] {
            width: 100%;
            padding:   8px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        img {
            width: 100px;
            height: 100px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <header>
        <h1>Sửa thông tin giới thiệu</h1>
    </header>

    <div class="container">
        
        <table id="employeeTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ảnh bìa đầu trang</th>
                    <th>Ảnh bìa trái</th>
                    <th>Nội dung</th>
                    <th>Địa chỉ</th>
                    <th>Liên hệ</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
            <td>01</td>
            <td><img src="~/picture/biahome.png" /></td>
            <td><img src="~/picture/anh4.jpg" /></td>
            <td>Hệ thống nhà sách của chúng tôi mang đến cho bạn thế giới sách phong phú và tiện lợi ngay cả trên website. Chúng tôi không chỉ là nơi mua sắm sách mà còn là không gian văn hóa, nơi bạn có thể khám phá tri thức, kết nối với cộng đồng yêu sách và nuôi dưỡng niềm đam mê đọc.</td>
            <td>11A Đường ABC, TP. HCM</td>
            <td>1900 1234</td>
            <td>
                <a><button class="btn btn-primary" onclick="openAddModal()">Sửa</button></a>
                <a asp-action="Delete" asp-route-id="" class="btn btn-danger">Xóa</a>
            </td>
            </tbody>
        </table>
    </div>

    <!-- Model Sửa -->
    <div id="addModal" class="modal">
        <div class="modal-content">
            <h2>Sửa thông tin</h2>
            <div class="form-group">
                <label for="addName">Ảnh bìa đầu trang:</label>
                <input type="file" name="ImageFile" />                
            </div>
            <div class="form-group">
                <label for="addPosition">Ảnh bìa trái:</label>
                <input type="file" name="ImageFile" />               
            </div>
            <div class="form-group">
                <label for="addDepartment">Nội dung:</label>
                <input type="text" id="addDepartment">
            </div>
            <div class="form-group">
                <label for="addDate">Địa chỉ:</label>
                <input type="text" id="addDepartment">
            </div>
            <div class="form-group">
                <label for="addDate">Liên hệ:</label>
                <input type="text" id="addDepartment">
            </div>
            <button class="button" onclick="addEmployee()">Save</button>
            <button class="button" onclick="closeAddModal()">Hủy</button>
        </div>
    </div>

    

    <script>
        let employeeIdCounter = 1;

        function openAddModal() {
            document.getElementById('addModal').style.display = 'flex';
        }

        function closeAddModal() {
            document.getElementById('addModal').style.display = 'none';
        }

        function openEditModal(employeeId) {
            const employee = document.getElementById('employee-' + employeeId);
            document.getElementById('editName').value = employee.querySelector('.name').innerText;
            document.getElementById('editPosition').value = employee.querySelector('.position').innerText;
            document.getElementById('editDepartment').value = employee.querySelector('.department').innerText;
            document.getElementById('editDate').value = employee.querySelector('.date').innerText;
            document.getElementById('editModal').style.display = 'flex';
            document.getElementById('editModal').setAttribute('data-id', employeeId);
        }

        function closeEditModal() {
            document.getElementById('editModal').style.display = 'none';
        }

        function addEmployee() {
            const name = document.getElementById('addName').value;
            const position = document.getElementById('addPosition').value;
            const department = document.getElementById('addDepartment').value;
            const date = document.getElementById('addDate').value;

            const tableBody = document.querySelector('#employeeTable tbody');
            const row = tableBody.insertRow();
            row.setAttribute('id', 'employee-' + employeeIdCounter);

            row.innerHTML = `
                                <td>${employeeIdCounter}</td>
                                <td class="name">${name}</td>
                                <td class="position">${position}</td>
                                <td class="department">${department}</td>
                                <td class="date">${date}</td>
                                <td class="action-buttons">
                                    <button class="button" onclick="openEditModal(${employeeIdCounter})">Sửa</button>
                                    <button class="button" onclick="deleteEmployee(${employeeIdCounter})">Xóa</button>
                                </td>
                            `;

            employeeIdCounter++;
            closeAddModal();
        }

        function updateEmployee() {
            const employeeId = document.getElementById('editModal').getAttribute('data-id');
            const employee = document.getElementById('employee-' + employeeId);

            employee.querySelector('.name').innerText = document.getElementById('editName').value;
            employee.querySelector('.position').innerText = document.getElementById('editPosition').value;
            employee.querySelector('.department').innerText = document.getElementById('editDepartment').value;
            employee.querySelector('.date').innerText = document.getElementById('editDate').value;

            closeEditModal();
        }

        function deleteEmployee(employeeId) {
            const employee = document.getElementById('employee-' + employeeId);
            employee.remove();
        }
    </script>
</body>
</html>

